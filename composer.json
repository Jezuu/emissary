{
    "name": "jezuu/emissary",
	"description": "Allows you to easily use Laravel Service Providers with Slim 3's DI container",
	"keywords": ["slim", "laravel", "service provider", "dependency injection"],
	"homepage": "https://github.com/Jezuu/emissary",
	"license": "MIT",
	"authors": [
        {
            "name": "Jezuu",
            "homepage": "https://github.com/Jezuu"
        }
    ],
	"require": {
        "php": ">=5.5.0",
        "slim/slim": ">=3.0",
        "illuminate/support": ">=5.1"
    },

    "repositories": [
        {"type": "composer", "url": "https://repo.packagist.com/jezuu/"},
        {"packagist.org": false}
    ],
    "autoload": {
        "psr-0" : {
            "Jezuu\\Emissary\\" : "src/"
        }
    }
}